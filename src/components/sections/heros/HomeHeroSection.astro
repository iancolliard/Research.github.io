---
import { Icon } from 'astro-icon/components';
import { Container } from '@components/odyssey-theme';
// ... other imports
---
<Container>
	<section class="hero-section__section">
		<div class="hero-section__text">
				<h1>Welcome!</h1>
				<p>
					To a place dedicated to my research and crystal structures. Click on the Diffractogram to learn more about my work →
				</p>
				<p>
					Or click ↓ below to learn more about me.
				</p>
				<a href="/Research.github.io/About Me/About Me" target="_blank" rel="noopener">
					<!-- Add a wrapper div here -->
					<div class="image-wrapper">
						<img
							src="/Research.github.io/assets/images/profile.webp"
							alt="Profile"
							width="300"
							class="oval-image"
						/>
					</div>
				</a>
            <Fragment slot="icon">
              <Icon name="ic:baseline-chevron-right"/>
            </Fragment>
		</div>
		<div class="hero-section__image">
				<a href="/Research.github.io/Crystallography/Crystallography" target="_blank" rel="noopener">
					<!-- Add a wrapper div here -->
					<div class="image-wrapper">
						<img
							src="/Research.github.io/assets/images/Cover.webp"
							alt="Diffractogram"
						/>
					</div>
				</a>
		</div>
	</section>
</Container>


<style>
	.hero-section__section {
		margin: var(--section-margin) auto;
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 1rem;
	}
	.hero-section__text {
		justify-self: center;
		max-width: 25rem;
		text-align: center;
	}
	.hero-btns__container {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.hero-btns__container {
		margin-right: 1rem;
	}
	.hero-section__image {
		display: flex;
	}
	.hero-section__image img {
		width: 100%;
		height: 100%;
		max-height: 80vh;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
	}
	.oval-image {
 		border-radius: var(--theme-shape-radius);
 		object-fit: cover;
		margin-left: auto;
		margin-right: auto;
	}
	
	/* Apply mobile-specific changes inside this media query */
	@media (max-width: 768px) {
		.hero-section__section {
			grid-template-columns: 1fr;
			/* You can optionally add a padding to prevent the images from touching the screen edges */
			padding: 0 1rem;
		}
		
		/* Target both image containers on mobile */
		.hero-section__image,
		.hero-section__text a {
			display: flex; /* Ensure the image fills the flex container */
			justify-content: center; /* Center the image within its container */
		}
		
		.oval-image,
		#Diffractogram {
			/* Force both images to have the same dimensions on mobile */
			width: 100%; /* Occupy the full width of the mobile grid column */
			height: auto; /* Maintain aspect ratio */
			aspect-ratio: 1 / 1; /* Creates a square container for both images */
			object-fit: cover; /* This is crucial for filling the container without distortion */
		}
		
		/* The oval image has its own class, so you need to override it explicitly for mobile */
		.oval-image {
			width: 80%; /* Adjust size as needed, e.g., 80% width */
			max-width: 300px; /* Ensure it doesn't grow too large */
			aspect-ratio: 1 / 1;
			border-radius: 50%; /* Keep the oval shape */
			object-fit: cover;
		}

		/* Adjust the Diffractogram image specifically to match */
		#Diffractogram {
			width: 80%; /* Match the profile image width */
			max-width: 300px;
			aspect-ratio: 1 / 1; /* Ensure both images have the same shape */
			object-fit: cover;
			border-radius: var(--theme-shape-radius); /* Apply the same theme radius */
		}

		.hero-section__text {
			max-width: 100%; /* Allow text to use full mobile width */
		}
	}
</style>