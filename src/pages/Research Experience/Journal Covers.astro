---
import Layout from '../layouts/Page.astro';
import { TextSection } from '@components/odyssey-theme';
import { Image } from 'astro:assets';

// Import your covers from src/assets/covers/
import cover1 from '../../assets/covers/IMG_0373.png';
import cover2 from '../../assets/covers/IMG_0371.png';
import cover3 from '../../assets/covers/IMG_1010.png';
import cover4 from '../../assets/covers/IMG_0372.png';

const base = import.meta.env.BASE_URL;
const seo = { title: 'Journal Covers', description: 'Selected journal covers' };
<Layout {seo}>
  <TextSection>
    <div class="prose mx-auto">
      <h1>Journal Covers</h1>
      <p class="opacity-80">Click a cover image to open the PDF, or use the DOI link.</p>

      <!-- Cover 1 -->
      <h3>Cover 1</h3>
      <a href={base + 'files/paper18.pdf'} target="_blank" rel="noopener">
        <Image src={cover1} alt="JACS 2024 Cover" class="my-4" />
      </a>
      <p><strong>Polyoxometalate ligands reveal different coordination chemistries among lanthanides and heavy actinides</strong></p>
      <p>
        <a href={base + 'files/paper18.pdf'} target="_blank" rel="noopener">[PDF]</a> ·
        <a href="https://doi.org/10.xxxx/your-doi-here" target="_blank" rel="noopener">[DOI]</a>
      </p>

      <!-- Cover 2 -->
      <h3>Cover 2</h3>
      <a href={base + 'files/paper19.pdf'} target="_blank" rel="noopener">
        <Image src={cover2} alt="ChemComm 2024 Cover" class="my-4" />
      </a>
      <p><strong>Isolation and characterization of a Peacock–Weakley polyoxometalate containing a transplutonium element</strong></p>
      <p>
        <a href={base + 'files/paper19.pdf'} target="_blank" rel="noopener">[PDF]</a> ·
        <a href="https://doi.org/10.xxxx/another-doi" target="_blank" rel="noopener">[DOI]</a>
      </p>

      <!-- Cover 3 -->
      <h3>Cover 3</h3>
      <a href={base + 'files/paper17.pdf'} target="_blank" rel="noopener">
        <Image src={cover3} alt="Inorg Chem 2023 Cover" class="my-4" />
      </a>
      <p><strong>Contrasting Trivalent Lanthanide and Actinide Complexation by Polyoxometalates via solution-state NMR</strong></p>
      <p>
        <a href={base + 'files/paper17.pdf'} target="_blank" rel="noopener">[PDF]</a> ·
        <a href="https://doi.org/10.xxxx/some-doi" target="_blank" rel="noopener">[DOI]</a>
      </p>

      <!-- Cover 4 -->
      <h3>Cover 4</h3>
      <a href={base + 'files/paper15.pdf'} target="_blank" rel="noopener">
        <Image src={cover4} alt="Nat Chem 2022 Cover" class="my-4" />
      </a>
      <p><strong>Polyoxometalates as ligands to synthesize, isolate, and characterize compounds of rare isotopes on the microgram scale</strong></p>
      <p>
        <a href={base + 'files/paper15.pdf'} target="_blank" rel="noopener">[PDF]</a> ·
        <a href="https://doi.org/10.xxxx/another-one" target="_blank" rel="noopener">[DOI]</a>
      </p>
    </div>
  </TextSection>
</Layout>