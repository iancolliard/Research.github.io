---
import Layout from '../../layouts/Page.astro';
import { Container, FeatureCard } from '@components/odyssey-theme';

const base = import.meta.env.BASE_URL;
const hrefAbout = `${base}About Me/About Me`;
const hrefCV    = `${base}About Me/CV`;

const coverJACS      = `${base}assets/images/IMG_3073.webp`;
const coverChemComm  = `${base}assets/images/IMG_3071.webp`;
const coverInorgChem = `${base}assets/images/IMG_1010.webp`;
const coverNatChem   = `${base}assets/images/IMG_3072.webp`;
---

<Layout>
  <Container>
    <h3>Journal Covers</h3>

    <div class="feature-card__grid">
      <FeatureCard href={hrefAbout} title="Cover: JACS 2024">
        <img slot="media" src={coverJACS} alt="JACS 2024 cover" loading="lazy" />
      </FeatureCard>

      <FeatureCard href={hrefCV} title="Cover: Chem Commun 2024">
        <img slot="media" src={coverChemComm} alt="Chem Commun 2024 cover" loading="lazy" />
      </FeatureCard>

      <FeatureCard href={hrefCV} title="Cover: Inorg Chem 2023">
        <img slot="media" src={coverInorgChem} alt="Inorg Chem 2023 cover" loading="lazy" />
      </FeatureCard>

      <FeatureCard href={hrefCV} title="Cover: Nat Chem 2022">
        <img slot="media" src={coverNatChem} alt="Nat Chem 2022 cover" loading="lazy" />
      </FeatureCard>
    </div>
  </Container>
</Layout>

<style>
  .feature-card__grid { display:grid; grid-template-columns:repeat(2,1fr); gap:var(--theme-grid-gap); }
  @media (max-width:768px){ .feature-card__grid{ grid-template-columns:1fr; } }
  /* Make sure images are visible */
  .feature-card__grid img { display:block; width:100%; height:auto; }
</style>