<style>
/* Jump menu */
.jump {
  padding: .75rem 1rem;
  border: 1px solid color-mix(in oklab, currentColor 12%, transparent);
  border-radius: 12px;
  background: var(--theme-surface-1, #fff);
  color: var(--theme-on-surface-1, inherit);
  margin: 1rem 0 1.25rem;
}
.jump ul {
  margin: .5rem 0 0; padding: 0;
  list-style: none; display: flex; gap: .75rem; flex-wrap: wrap;
}
.jump a { text-decoration: none; }
.jump a:hover { text-decoration: underline; }

/* Smooth scrolling + offset for fixed header */
html { scroll-behavior: smooth; }
:where(section)[id], :where(h2,h3)[id] { scroll-margin-top: var(--header-h, 72px); }
</style>
