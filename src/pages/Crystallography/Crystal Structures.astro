---
import Layout from '../../layouts/Page.astro';
import { TextSection } from '@components/odyssey-theme';

const base = import.meta.env.BASE_URL;
const withBase = (p) => `${base}${p.replace(/^\/+/, '')}`;

const seo = {
  title: 'Crystal Structures',
  description: 'Records & Milestones',
};
---

<Layout title={seo.title} description={seo.description}>
  <!-- Jump menu -->
  <nav class="jump" aria-label="On this page">
    <strong>^:</strong>
    <ul>
      <li><a href="#record-holders">Largest Cell</a></li>
      <li><a href="#lowest-r1">Lowest R1</a></li>
      <li><a href="#longest-params">Largest lattice parameters</a></li>
      <li><a href="#common-space-groups">Most common space groups</a></li>
      <li><a href="#by-system">By crystal system</a></li>
      <li><a href="#by-year">By year</a></li>
      <li><a href="#by-element">By element</a></li>
    </ul>
  </nav>

  <TextSection>
    <h1>Record Holders &amp; Milestones</h1>

    <section id="record-holders">
